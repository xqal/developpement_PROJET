<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Couleur_de_fond"
    tools:visibility="visible"
    tools:context=".Activity.QuizzActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Question :"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="352dp"
        android:layout_height="220dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/edit_textbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageA"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/edit_textbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textA"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageA"
        app:layout_constraintStart_toStartOf="@+id/imageA"
        app:layout_constraintTop_toTopOf="@+id/imageA" />

    <ImageView
        android:id="@+id/imageB"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edit_textbackground"
        app:layout_constraintEnd_toEndOf="@+id/imageA"
        app:layout_constraintStart_toStartOf="@+id/imageA"
        app:layout_constraintTop_toBottomOf="@+id/imageA" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:src="@android:drawable/ic_menu_revert"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textB"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="B"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageB"
        app:layout_constraintStart_toStartOf="@+id/imageB"
        app:layout_constraintTop_toTopOf="@+id/imageB" />

    <ImageView
        android:id="@+id/imageC"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edit_textbackground"
        app:layout_constraintEnd_toEndOf="@+id/imageA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageA"
        app:layout_constraintTop_toBottomOf="@+id/imageB" />

    <TextView
        android:id="@+id/textC"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageC"
        app:layout_constraintStart_toStartOf="@+id/imageC"
        app:layout_constraintTop_toTopOf="@+id/imageC" />

    <ImageView
        android:id="@+id/imageD"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edit_textbackground"
        app:layout_constraintEnd_toEndOf="@+id/imageA"
        app:layout_constraintStart_toStartOf="@+id/imageA"
        app:layout_constraintTop_toBottomOf="@+id/imageC" />

    <TextView
        android:id="@+id/textD"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="D"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageD"
        app:layout_constraintStart_toStartOf="@+id/imageD"
        app:layout_constraintTop_toTopOf="@+id/imageD" />

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="QUESTION ?"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LogButton"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:text="SUIVANT"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageD" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>